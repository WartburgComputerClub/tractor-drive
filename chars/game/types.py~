import bge

class GameObject(bge.types.KX_GameObject):
    
    def __init__(self,old_owner):
        self.currState = None
    
    def setState(self,newstate):
        if self.currState != None:
            self.currState.onLeave()
        self.currState = newstate
        self.currState.onEnter()
        
    def onUpdate(self):
        self.currState.onUpdate()
        
    def onMessage(self,msg):
        self.currState.onMessage()
        
class GameObjectState:
    
    def __init__(self,owner):
        self.owner = owner
    
    def onEnter(self):
        pass
    
    def onLeave(self):
        pass
    
    def onUpdate(self):
        pass
    
    def onMessage(self,msg):
        pass
